.gameimage{
  width:100%;height:400rpx;margin-bottom: 35rpx
}
.gamedetail{
display:flex;flex-direction:column;padding:0 30rpx 30rpx 30rpx;margin-bottom: 30rpx;
box-shadow:0rpx 5rpx  30rpx rgba(208,213,225,0.2);
}
.carddes{
  font-size:24rpx;color:#959baa;margin: 10rpx 0 30rpx 30rpx;
}
.cutline{
  height:2rpx;background: #edeff2;margin-left: 30rpx;width:100%;
}
.titletext{
 font-size:34rpx;color:#101319;margin:30rpx;font-weight:bold;
}
