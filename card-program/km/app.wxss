/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.mycontainer{
 height: 100vh; 
 background:#f9fbfe;
 padding:20rpx 30rpx
}
.cardtitle{
  font-size:30rpx;color:#101319;margin-left:20rpx
}
.label{
display:inline-block;padding:14rpx 24rpx;background:#fff;color:#d1a44b;font-size:26rpx;border:1px solid #d1a44b;border-radius: 180rpx;margin:0 15rpx 20rpx 0
}
.unselectedLabel{
display:inline-block;padding:14rpx 24rpx;background:#fff;color:#959BAA;font-size:26rpx;border:1px solid #edeff2;border-radius: 180rpx;margin:0 15rpx 20rpx 0
}
.leftText{
  font-size:30rpx;color:#959baa;
}
/*活动列表 */
.gamedetail{
display:flex;flex-direction:column;padding-bottom:20rpx;margin: 0 30rpx 30rpx 30rpx;
box-shadow:0rpx 5rpx  30rpx rgba(208,213,225,0.2);border-radius: 10rpx;overflow: hidden
}
/* 信用卡列表 */

.cardimage{
  width:214rpx;height:134rpx;
}
.ailingcardimage{
  width:214rpx;height:214rpx;
}
.carddetail{
  display:flex;flex-direction:column;margin-left:20rpx;width:70%
}

.carddes{
  font-size:24rpx;color:#959baa;margin-left:20rpx
}
.cardmargin{
margin-bottom: 6rpx
}

.gamemargin{
  margin-bottom: 15rpx
}
/* 输入框样式 */
.rightInput{
color:#101319;font-size: 30rpx;display: inline-block
}
.rightHolder{
  color:#CED3E0;font-size:30rpx;display: inline-block
}

/* 弹框样式 */
.modal-mask{width:100%;
height:100%;
position:fixed;
top:0;
left:0;
background:#000;
opacity:0.5;
overflow:hidden;
z-index:1500;
color:#fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 8rpx
}

.modal-title {
  padding-top: 60rpx;
  color: #101319;
  font-size: 32rpx;
  text-align: center;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 98rpx;
  border-top: 1px solid #edeff2;
  font-size: 34rpx;
  line-height: 98rpx;
}
.btn-confirm{color:#00c200;background:#fff;flex:1;border-left: 1rpx solid #ececec;border-radius: 0;border:none}
.btn-cancel{color:#959baa;font-size:32rpx;background:#fff;flex:1;border-radius: 0;border:none}
.btn-confirm::after{
  border-radius: 0
}
.btn-cancel::after{
  border-radius: 0
}

.modal-content {
  color: #363636;
  font-size: 28rpx;
  padding: 30rpx 30rpx;
}
.modal-button {
  color: #fff;
  font-size: 20rpx;
  width:320rpx;
  height:60rpx;
  line-height: 60rpx;
  background:#ff5950;
  margin-bottom: 30rpx
}
/* 上拉加载更多 */
.loading{  
  padding: 30rpx;  
  text-align: center;  
  font-size:26rpx;
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
} 

